<launch>
    <arg name="min_segment_length" default="0.5" description="[m]"/>
    <arg name="max_segment_distance" default="30.0" description="[m]"/>
    <arg name="ignore_less_than_float" default="false" description="GNSS-RTK is enabled?"/>

    <arg name="static_linear_covariance" default="0.04"/>
    <arg name="static_angular_covariance" default="0.0010"/>
    <arg name="static_scale_factor" default="-1.0" description="if negative value, static_scale_factor is not used"/>

    <arg name="road_marking_labels" default="[zebra_marking, virtual, line_thin, line_thick, pedestrian_marking, stop_line]"/>
    <arg name="sign_board_labels" default="[sign-board]"/>

    <arg name="initialpose_cov_xx_yy" default="[1.0,0.25]"/>

    <node name="doppler_converter" pkg="doppler_converter" exec="doppler_converter"/>

    <include file="$(find-pkg-share pcdless_launch)/launch/pcdless.launch.xml">
        <arg name="src_image" value="/sensing/camera/c1/image_raw/compressed"/>
        <arg name="src_info" value="/sensing/camera/c1/camera_info"/>
        <arg name="target_height_ratio" value="0.80"/>
        <arg name="override_extrinsic" value="true"/>
    </include>

</launch>